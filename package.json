  "scripts": {
    "build:commonjs": "BABEL_ENV=cjs babel ./src --extensions \".js,.jsx,.ts,.tsx\" -d lib --copy-files",
    "build:esm": "BABEL_ENV=esm babel src -d esm --extensions \".js,.jsx,.ts,.tsx\" --copy-files",
    "build:umd": "webpack",
    "build:webdemoPkg": "mkdir ./webdemoPkg && npm run copy:webdemoPkg",
    "build": "npm run clean && npm run build:commonjs && npm run build:esm && npm run build:umd && npm run tsc:esm && npm run tsc:commonjs",
    "build:local": "npm run clean && npm run build:commonjs && npm run build:esm && npm run tsc:esm && npm run tsc:commonjs && npm run build:webdemoPkg",
    "clean": "rm -rf ./lib ./esm ./umd ./webdemoPkg",
    "commentSniff": "node -e 'require(\"./scripts/commentSniffer.ts\").commentSniffer()'",
    "copy:webdemoPkg": "cp -r ./esm ./webdemoPkg || copy -r ./esm ./webdemoPkg && cp -r ./lib ./webdemoPkg || copy -r ./lib ./webdemoPkg && cp -r package.json webdemoPkg || copy -r package.json webdemoPkg",
    "start:webdemo": "cd webDemo && npm i && npm run start",
    "lint": "eslint src && eslint webDemo",
    "prebuild": "npm run test",
    "start:watch": "nodemon -e js,ts,tsx --watch src --exec 'npm run build'",
    "start": "npm run build:local && npm run start:webdemo",
    "test": "",
    "tsc:commonjs": "tsc --module commonjs --outDir lib",
    "tsc:esm": "tsc --module es2015 --outDir esm"
  },
  "browserslist": {
    "production": [
      ">0.2%",
